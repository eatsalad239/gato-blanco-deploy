# â˜• GATO BLANCO CONNECT - ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your production values

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_DB=gato_blanco_cafe
POSTGRES_USER=gato_blanco_user
POSTGRES_PASSWORD=change_me_in_production_strong_password_here
POSTGRES_HOST=database
POSTGRES_PORT=5432
DATABASE_URL=postgresql://gato_blanco_user:change_me_in_production_strong_password_here@database:5432/gato_blanco_cafe

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=production
VITE_APP_NAME=Gato Blanco Connect
VITE_APP_URL=http://localhost
PORT=3000

# ========================================
# CURRENCY & PRICING
# ========================================
VITE_USD_TO_COP_RATE=4200
VITE_GRINGO_PRICE_MULTIPLIER=1.5
VITE_DEFAULT_CURRENCY=COP

# ========================================
# PAYMENT PROCESSING (Stripe)
# ========================================
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ========================================
# EMAIL NOTIFICATIONS (SendGrid recommended)
# ========================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=bookings@gatoblanco.co
BOOKING_NOTIFICATION_EMAIL=admin@gatoblanco.co

# ========================================
# WHATSAPP BUSINESS API (for instant notifications)
# ========================================
WHATSAPP_API_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER=+57_your_whatsapp_business_number
WHATSAPP_NOTIFICATION_ENABLED=true

# ========================================
# ADMIN CONFIGURATION
# ========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_in_production_strong_admin_password
ADMIN_SECRET_KEY=your_jwt_secret_key_here_min_32_chars

# ========================================
# API & BACKEND
# ========================================
VITE_API_URL=http://localhost:3000/api
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost

# ========================================
# FEATURE FLAGS
# ========================================
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_BOOKINGS=true
VITE_ENABLE_ADMIN=true
VITE_ENABLE_WHATSAPP_NOTIFICATIONS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# ========================================
# GOOGLE MAPS (for location services)
# ========================================
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ========================================
# ANALYTICS (Optional)
# ========================================
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_FACEBOOK_PIXEL_ID=your_pixel_id_here

# ========================================
# SECURITY
# ========================================
SESSION_SECRET=your_session_secret_min_64_chars_here
JWT_EXPIRES_IN=7d
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# TIMEZONE
# ========================================
TZ=America/Bogota
VITE_TIMEZONE=America/Bogota