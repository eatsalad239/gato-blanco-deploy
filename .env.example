# Environment Variables for Production
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=gato_blanco
POSTGRES_USER=gato_blanco_user

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Application Configuration
NODE_ENV=production
PORT=3000

# Security
SECRET_KEY=your_super_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External Services
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# WhatsApp Business API (optional)
WHATSAPP_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_ID=your_phone_number_id

# Google Analytics (optional)
GA_TRACKING_ID=G-XXXXXXXXXX

# Domain Configuration
DOMAIN=gatoblanco.cafe
SSL_EMAIL=admin@gatoblanco.cafe

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring (optional)
GRAFANA_PASSWORD=your_grafana_password

# Social Media Integration (optional)
FACEBOOK_PAGE_ID=your_facebook_page_id
INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# Colombian Tax Configuration
NIT_NUMBER=your_nit_number
DIAN_USERNAME=your_dian_username
DIAN_PASSWORD=your_dian_password